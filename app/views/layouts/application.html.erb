<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
	<title><%= @page_name %></title>
	<%= stylesheet_link_tag    "application", media: "all" %>
	<%= javascript_include_tag "user" %>
	<%= csrf_meta_tags %>

</head>

<body>
	<div class="main_box">
		<% if session[:user_session] == nil then %>
			<p> <%= link_to "Login", user_path("login") %> |
				<%= link_to "Search", user_path("") %>
			</p>
		<% else %>
			<p>
				Hi <%= session[:user_session].first_name %> | 
				<%= link_to "Home", user_path(session[:user_session]) %> | 
				<%= link_to "Logout", user_path("logout") %> |
				<%= link_to "Search", user_path("") %>
			</p>
		<% end %>

		<div class="draw_line_top"></div>
		<table cellspacing="0" class="page_header_table">
			<thead class="heading">
				<td><%= @page_name %></td>
			</thead>
		</table>
		<div class="draw_line_bottom"></div>
		<br/>
			<%= yield %> <!-- ACTUAL PAGE CONTENT -->
		<br/><br/>
		<div class="draw_line_top"></div>
		<br/>
	</div>
</body>
</html>
